{
    "name": "reminder-client",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "ra",
    "sourceRoot": "apps/reminder-client/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/reminder-client",
                "browser": "apps/reminder-client/src/main.ts",
                "tsConfig": "apps/reminder-client/tsconfig.app.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/reminder-client/public"
                    }
                ],
                "styles": ["apps/reminder-client/src/styles.css"]
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@angular/build:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "reminder-client:build:production"
                },
                "development": {
                    "buildTarget": "reminder-client:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/reminder-client/jest.config.cts",
                "tsConfig": "apps/reminder-client/tsconfig.spec.json"
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "reminder-client:build",
                "staticFilePath": "dist/apps/reminder-client/browser",
                "spa": true
            }
        }
    }
}
